<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".EnterName">

    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent">


        <TextView
            android:id="@+id/bigText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="130dp"
            android:fontFamily="@font/monts_black"
            android:text="MASUKKAN\nDATA DIRI ANDA"
            android:textColor="@color/rajah"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radio_gender"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText2"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:requiresFadingEdge="horizontal">

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/monts_regular"
                android:text="Laki-Laki"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="-32dp"
                android:fontFamily="@font/monts_regular"
                android:text="Perempuan"
                android:textSize="16sp" />
        </RadioGroup>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/fill_text"
            android:ems="10"
            android:fontFamily="@font/monts_regular"
            android:hint="Nama Belakang"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textColorHint="#5C5C5C"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/editText3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/fill_text"
            android:ems="10"
            android:fontFamily="@font/monts_regular"
            android:hint="Usia      "
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textColorHint="#5C5C5C"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/editText3"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/fill_text"
            android:ems="10"
            android:fontFamily="@font/monts_regular"
            android:hint="Tinggi Badan"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColorHint="#5C5C5C"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_below="@+id/gold_spin"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/fill_text"
            android:ems="10"
            android:fontFamily="@font/monts_regular"
            android:hint="Massa Badan"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColorHint="#5C5C5C"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/bigText2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/fill_text"
            android:ems="10"
            android:fontFamily="@font/monts_regular"
            android:hint="Nama Depan"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textColorHint="#5C5C5C"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/gold_spin"
            style="@style/SpinnerTextViewItem"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/radio_gender"
            android:layout_alignParentStart="false"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:clipToPadding="true"
            android:paddingLeft="40dp"
            android:popupBackground="@drawable/fill_text" />

        <Button
            android:id="@+id/button2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="115dp"
            android:background="@drawable/round_style5"
            android:onClick="useUser"
            android:text="Submit"
            android:textColor="@color/rajah" />

    </RelativeLayout>

</LinearLayout>