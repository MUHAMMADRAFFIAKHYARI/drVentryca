<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bleu_de_france"
    tools:context=".Activity.BMICalc">


    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/round_style9" />

    <View
        android:id="@+id/circleResult"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:background="@drawable/circle" />

    <!-- <View
        android:id="@+id/view4"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_alignTop="@+id/view3"
        android:layout_alignBottom="@+id/view3"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/circle" />
-->
    <TextView
        android:id="@+id/imtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/circleResult"
        android:layout_alignBottom="@+id/circleResult"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="0.0"
        android:textColor="@color/colorWhite"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circleResult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/monts_regular"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Status"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/massaInput"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_below="@+id/status"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/fill_text"
        android:fontFamily="@font/monts_regular"
        android:hint="Massa Tubuh"
        android:inputType="numberDecimal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAlignment="center"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/tinggiInput"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/massaInput"
        android:layout_marginStart="216dp"
        android:background="@drawable/fill_text"
        android:fontFamily="@font/monts_regular"
        android:hint="Tinggi Tubuh"
        android:inputType="numberDecimal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/massaInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:background="@drawable/round_style5"
        android:fontFamily="@font/monts_regular"
        android:onClick="imtCalculate"
        android:text="Calculate"
        android:textColor="@color/rajah"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calculate"
        android:layout_alignBottom="@+id/view5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="26dp"
        android:fontFamily="@font/monts_regular"
        android:text="Lihat Tabel"
        android:textColor="@color/dark_cerulian"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>