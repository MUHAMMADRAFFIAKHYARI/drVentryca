<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/monts_black"
            android:text="Opsi Akun"
            android:textAlignment="center"
            android:textColor="@color/dark_cerulian"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/editAkun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/monts_regular"
            android:text="Edit Akun"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hapusAkun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/monts_regular"
            android:text="Hapus Akun"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/keluar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="160dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/monts_regular"
            android:text="Logout"
            android:textAlignment="center"
            android:textColor="@color/red_circle"
            android:textSize="16sp" />


    </androidx.cardview.widget.CardView>
</RelativeLayout>