<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/all_ft"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_faktatips"
            android:layout_width="315dp"
            android:layout_height="530dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="220dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            app:contentPaddingLeft="25dp"
            app:contentPaddingRight="25dp">

            <TextView
                android:id="@+id/text_FaktaTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:fontFamily="@font/monts_regular"
                android:foregroundGravity="center_vertical|center|center_horizontal"
                android:gravity="center|center_horizontal|center_vertical"
                android:lineSpacingExtra="4sp"
                android:text="Ibu hamil sangat bagus dan butuh nutrisi yang diperlukan janinnya seperti asam folat, asam amino &amp; zat besi. Maka mengkonsumsi 1 sendok madu, 1 sendok zaitun dan 7 butir kurma setiap harinya selama masa kehamilan nutrisi-nutrisi tersebut akan terpenuhi."
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/hal_count"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="450dp"
                android:background="@drawable/round_style5"
                android:fontFamily="@font/monts_regular"
                android:lineSpacingExtra="4sp"
                android:text="3/10"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>