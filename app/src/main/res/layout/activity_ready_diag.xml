<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ReadyDiag">

    <Button
        android:id="@+id/ready"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/round_style5"
        android:fontFamily="@font/monts_regular"
        android:onClick="goTest"
        android:text="start"
        android:textColor="@color/rajah"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slide_desc2"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diag_text"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/monts_regular"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/ready_diagnosis"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/diag_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_diag"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="130sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50sp"
        android:fontFamily="@font/monts_black"
        android:foregroundGravity="center|center_horizontal"
        android:gravity="center_horizontal"
        android:text="DIAGNOSIS"
        android:textColor="@color/dark_cerulian"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/round_style1" />

    <ImageView
        android:id="@+id/image_diag"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="38dp"
        app:srcCompat="@drawable/kuuga3" />

</RelativeLayout>