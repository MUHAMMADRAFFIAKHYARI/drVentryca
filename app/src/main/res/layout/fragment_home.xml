<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="348dp"
        android:scrollbars="none"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/goData"
            app:layout_constraintTop_toBottomOf="@+id/app_title">

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/halo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/monts_regular"
            android:text="Halo"
            android:textColor="#1b1b1b"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_title" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/mosnt_bold"
            android:text="RAFFI!"
            android:textColor="#1B1B1B"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/halo"
            app:layout_constraintStart_toEndOf="@+id/halo" />

        <TextView
            android:id="@+id/kabar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/monts_regular"
            android:text="Bagaimana kabar anda hari ini?"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/halo" />

        <androidx.cardview.widget.CardView
            android:id="@+id/goDiag"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="@color/bleu_de_france"
            app:cardCornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kabar">

            <ImageView
                android:id="@+id/goDiag1"
                android:layout_width="109dp"
                android:layout_height="74dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/diagnosis_slide" />


            <TextView
                android:id="@+id/goDiag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/monts_regular"
                android:gravity="center|center_vertical"
                android:text="Diagnosis"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/goData"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="@color/rajah"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toStartOf="@+id/goFakta"
            app:layout_constraintStart_toEndOf="@+id/goDiag"
            app:layout_constraintTop_toBottomOf="@+id/kabar">

            <ImageView
                android:id="@+id/goData1"
                android:layout_width="109dp"
                android:layout_height="74dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/kuuga" />

            <TextView
                android:id="@+id/goData2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/monts_regular"
                android:gravity="center|center_vertical"
                android:text="Data \n Penyakit"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/goFakta"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="24dp"
            app:cardBackgroundColor="@color/medium_torquise"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kabar">

            <ImageView
                android:id="@+id/goFakta1"
                android:layout_width="109dp"
                android:layout_height="74dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/zeroone" />

            <TextView
                android:id="@+id/goFakta2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/monts_regular"
                android:gravity="center|center_vertical"
                android:text="@string/card_text3"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/berita1"
            android:layout_width="355dp"
            android:layout_height="192dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/coral_reef"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_bawah1" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="130dp"
                android:fontFamily="@font/monts_black"
                android:text=" energi yang tidak terpakai?"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="110dp"
                android:fontFamily="@font/monts_regular"
                android:text="Lemak adalah"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/berita2"
            android:layout_width="355dp"
            android:layout_height="192dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/indico"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/berita1">

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/view7"
            android:layout_width="355dp"
            android:layout_height="192dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/bleu_de_france"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/lihat_tips_lain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/berita2">

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_bawah1"
            android:layout_width="240dp"
            android:layout_height="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/round_style5"
            android:fontFamily="@font/monts_regular"
            android:gravity="center"
            android:text="Info Kesehatan Teratas"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goDiag" />

        <TextView
            android:id="@+id/lihat_tips_lain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/monts_regular"
            android:text="Lihat info lainnya"
            android:textColor="@color/dark_cerulian"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view7" />
<!--

        <TextView
            android:id="@+id/text_bawah2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/monts_regular"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Berita Kesehatan"
            android:textColor="@color/dark_cerulian"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/text_bawah1"
            app:layout_constraintTop_toTopOf="@+id/text_bawah1" />
-->

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="120dp"
            android:fontFamily="@font/monts_black"
            android:foregroundGravity="center|center_horizontal"
            android:gravity="center|center_horizontal"
            android:text="dr Ventryca"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.017"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/news"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/app_title"
            app:srcCompat="@drawable/sidebar_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</RelativeLayout>