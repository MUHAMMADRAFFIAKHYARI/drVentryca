<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bleu_de_france"
    tools:context=".ActivityDiagnosis.ResultDiag">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="35dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/reDiag"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/docDiag"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/round_style5"
                android:fontFamily="@font/monts_regular"
                android:text="Re-Diagnosis"
                android:textColor="@color/rajah"
                android:textStyle="bold" />

            <Button
                android:id="@+id/endDiag"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reDiag"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_style5"
                android:fontFamily="@font/monts_regular"
                android:text="end"
                android:textColor="@color/rajah"
                android:textStyle="bold" />

            <View
                android:id="@+id/circleResult2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="270dp"
                android:background="@drawable/circle" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="88dp"
                android:layout_below="@+id/slide_heading"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="150dp"
                android:fontFamily="@font/monts_regular"
                android:text="Berdasarkan dari analis anda mengalami / menderita:"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_diag"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/monts_black"
                android:foregroundGravity="center|center_horizontal"
                android:gravity="center|center_horizontal"
                android:text="Hasil Diagnosis"
                android:textColor="@color/dark_cerulian"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/docDiag"
                android:layout_width="150dp"
                android:layout_height="400dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="200dp"
                app:srcCompat="@drawable/result_doc" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/circleResult2"
                android:layout_alignTop="@+id/circleResult2"
                android:layout_alignBottom="@+id/circleResult2"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="62dp"
                android:fontFamily="@font/monts_black"
                android:text="Striktur Esofagus"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/goDisease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/circleResult2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="500dp"
                android:fontFamily="@font/monts_black"
                android:text="Lihat di Data Penyakit"
                android:textColor="@color/dark_cerulian" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>