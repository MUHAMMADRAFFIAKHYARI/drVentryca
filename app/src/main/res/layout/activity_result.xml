<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bleu_de_france"
    tools:context=".ActivityDiagnosis.ResultDiag">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="35dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/reDiag"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_above="@+id/endDiag"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="11dp"
                android:background="@drawable/round_style5"
                android:fontFamily="@font/monts_regular"
                android:text="Re-Diagnosis"
                android:textColor="@color/rajah"
                android:textStyle="bold" />

            <Button
                android:id="@+id/endDiag"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_style5"
                android:fontFamily="@font/monts_regular"
                android:text="end"
                android:textColor="@color/rajah"
                android:textStyle="bold" />

            <View
                android:id="@+id/circleResult2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="220dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/circle" />

            <TextView
                android:id="@+id/textdiag"
                android:layout_width="300dp"
                android:layout_height="88dp"
                android:layout_below="@+id/slide_heading"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120dp"
                android:fontFamily="@font/monts_regular"
                android:text="Berdasarkan dari analis anda mengalami / menderita:"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_diag"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/monts_black"
                android:foregroundGravity="center|center_horizontal"
                android:gravity="center|center_horizontal"
                android:text="Hasil Diagnosis"
                android:textColor="@color/dark_cerulian"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/docDiag"
                android:layout_width="200dp"
                android:layout_height="350dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="200dp"
                app:srcCompat="@drawable/result_doc" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="164dp"
                android:layout_height="74dp"
                android:layout_alignStart="@+id/circleResult2"
                android:layout_alignTop="@+id/circleResult2"
                android:layout_alignEnd="@+id/circleResult2"
                android:layout_marginStart="23dp"
                android:layout_marginTop="66dp"
                android:layout_marginEnd="13dp"
                android:fontFamily="@font/monts_black"
                android:gravity="center|center_vertical"
                android:text="Esofagitis"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/goDisease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/reDiag"
                android:layout_alignEnd="@+id/textdiag"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="-11dp"
                android:layout_marginBottom="64dp"
                android:fontFamily="@font/monts_regular"
                android:text="Lihat di Data Penyakit"
                android:textColor="@color/dark_cerulian"
                android:textSize="16dp"
                android:textStyle="bold" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>