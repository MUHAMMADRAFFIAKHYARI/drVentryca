<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slide_image"
        android:layout_width="301dp"
        android:layout_height="380dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="60dp"
        app:srcCompat="@drawable/ichigo" />

    <TextView
        android:id="@+id/slide_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_image"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="130sp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="50sp"
        android:fontFamily="@font/monts_black"
        android:foregroundGravity="center|center_horizontal"
        android:gravity="center_horizontal"
        android:text="SHOWA"
        android:textColor="@color/dark_cerulian"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slide_desc"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_below="@+id/slide_heading"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/monts_regular"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. "
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />
</RelativeLayout>